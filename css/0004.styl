@import 'variables'
//base
html
  font-family fontFamily
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%
  color gray-8

body
  margin 0
  background gray-3
  vendor user-select none
ul
  margin 0
  padding 0
a
  color inherit
  text-decoration none
//tab-list
.tab-list
  &.border-tab
    @extend .border-bottom-1px
  li
    box-sizing border-box
    display inline-block
    font-size font-14
    text-align center
    line-height btn-height
  &.border-tab
    box-sizing border-box
    li
      a
        position relative
        display inline-block
        height btn-height
      &.active a
        color blue-3
        &:after
          position absolute
          left 0
          right 0
          bottom 1px
          width 100%
          height 4px
          content ''
          background blue-3
          border-radius 999px

ul.tab-list
  background gray-1
  position fixed!important
  top 0
  left 0
  right 0
  z-index 2
  >li:not(:first-child)
    position relative
    &:before
      position absolute
      top 16px
      left 1px
      content ''
      width 1px
      height 12px
      background gray-4
      vendor transform scaleX(.5)
      vendor transform-origin 0 0

//main-wrapper
.main-wrapper
  padding-top btn-height
section
  padding gap-12
  font-size font-14
  color gray-1
  &.area1
    background green-7
  &.area2
    background green-11
  &.area3
    background blue-12
  h4
    font-size 20px
    line-height btn-height
  > p
    margin gap-12
    line-height 20px
