@import 'variables'
//base
html
  font-family fontFamily
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%
  color gray-8

body
  margin 0
  background gray-3
  vendor user-select none

ul
  margin 0
  padding 0
  list-style none

//main-wrapper
.main-wrapper
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  background blue-3
  @extend .align-center
  h4
    position absolute
    top 0
    right 0
    left 0
    color gray-1
    font-size 20px
    font-weight normal
    letter-spacing 5px






