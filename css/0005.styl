@import 'variables'
//base
html
  font-family fontFamily
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%
  color gray-8

body
  margin 0
  background gray-3
  vendor user-select none

ul
  padding 0
  list-style none

//main-wrapper
.main-wrapper
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  background blue-3
  @extend .align-center
  h4
    position absolute
    top 0
    right 0
    left 0
    color gray-1
    font-size 20px
    font-weight normal
    letter-spacing 5px
.gesture-wrapper
  position relative
  width 240px
  height 240px
  canvas
    width 100%
    height 100%
  .touch-area
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    background transparent
    ul
      width 100%
      &:not(:last-child)
        margin-bottom 54px
      li
        display inline-block
        width 42px
        height 42px
        border 1px solid gray-1
        border-radius 999px
        &:not(:last-child)
          margin-right 54px







